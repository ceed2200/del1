@page
@model IndexModel
@{
    ViewData["Title"] = "Razor";

        // Beräknar dagens datum och veckodag
        string currentDate = DateTime.Now.ToString("yyyy-MM-dd");
        string currentTime = DateTime.Now.ToString("hh.mm");

        DayOfWeek currentDate2 = DateTime.Today.DayOfWeek;

        string currentWeekday;

        if(currentDate2 == DayOfWeek.Monday) {
            currentWeekday = "måndag";
        } else {
            currentWeekday = "inte måndag";
        }

        // Lista över kurser
        string[] courseList =
        ["DT057G, Webbutveckling I", "DT084G, Introduktion till programmering i JavaScript", "DT200G, Grafisk teknik för webb", "DT068G, Webbanvändbarhet", "DT003G, Databaser", "DT093G, Webbutveckling II", "DT197G, Webbdesign för CMS", "DT173G, Webbutveckling III", "IK060G, Projektledning", "DT193G, Fullstack-utveckling med ramverk", "DT071G, Programmering i C#.NET", "DT162G, JavaScriptbaserad webbutveckling" ];
}

<div class="razor-content">
    <h1 class="display-4">Razor</h1><br>
    <h2>Information</h2>
    <p>Du besökte denna webbplats @currentDate klockan @currentTime. </p>
    <p>Idag är det @currentWeekday.</p>
    <h2>Kurser</h2>
    <ul>
        @{  foreach (string course in courseList) {
            <li>
                @course
            </li>
        }
        }
    </ul>
</div>
